{
  "name": "create-meh-app",
  "version": "1.2.0",
  "description": "Quickly scaffolds a new MEH project by setting up linting, formatting and automatic deployment.",
  "bin": "src/index.js",
  "files": [
    "src"
  ],
  "scripts": {
    "lint": "eslint --ignore-path .gitignore .",
    "format": "prettier --ignore-path .gitignore --check '**/*.{css,graphql,html,json,md,scss}'",
    "prepublishOnly": "yarn lint && yarn format"
  },
  "lint-staged": {
    "*.js": [
      "yarn lint --fix",
      "git add"
    ],
    "*.{css,graphql,html,json,md,scss}": [
      "yarn format --write",
      "git add"
    ]
  },
  "engines": {
    "node": "10.15.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "license": "MIT",
  "repository": "github:greenhousecode/create-meh-app",
  "author": "Rick Stevens <rick.stevens@greenhousegroup.com> (http://www.greenhousegroup.com/)",
  "devDependencies": {
    "eslint": "6.1.0",
    "eslint-config-airbnb-base": "14.0.0",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^3.0.5",
    "lint-staged": "^9.2.5",
    "prettier": "^1.18.2"
  },
  "dependencies": {
    "boxen": "^4.1.0",
    "chalk": "^2.4.2",
    "clear": "^0.1.0",
    "commander": "^3.0.1",
    "curl": "^0.1.4",
    "gitlab": "^11.1.2",
    "inquirer": "^7.0.0",
    "promise.allsettled": "^1.0.1",
    "rimraf": "^3.0.0",
    "simple-git": "^1.126.0"
  }
}
